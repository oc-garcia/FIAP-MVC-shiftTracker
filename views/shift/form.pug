extends ../layout

block content
    h1.mb-4 #{title}
    form(method='post', action=url)
        .form-group
            label(for='userId') User ID
            input#userId.form-control(type='text', name='userId', value=shift.user_id, required)
        .form-group
            label(for='startTime') Start Time
            input#startTime.form-control(type='datetime-local', name='startTime', value=shift.start_time, required)
        .form-group
            label(for='endTime') End Time
            input#endTime.form-control(type='datetime-local', name='endTime', value=shift.end_time, required)
        input.btn.btn-primary(type='submit', value='Save')