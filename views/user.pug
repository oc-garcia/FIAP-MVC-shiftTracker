extends layout

block content
    h1.mb-4 Users
    table.table
        thead.thead-dark
            tr
                th Name
                th Email
                th Actions
        tbody
            each user in users
                tr
                    td #{user.name}
                    td #{user.email}
                    td
                        a.btn.btn-primary(href=`/user/${user.id}`) View
                        a.btn.btn-secondary(href=`/user/${user.id}/edit`) Edit
                        form(method='post', action=`/user/${user.id}?_method=DELETE`)
                            input.btn.btn-danger(type='submit', value='Delete')
    a.btn.btn-success(href='/user/new') Create New User
    